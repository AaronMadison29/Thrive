
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" href="~/images/favicon.png" />
    <title>Teacher Index</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img style="height: 50px; width: 125px;" src="~/images/thriveLogoWhite250x100.png"></a>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a asp-controller="Home" asp-action="AboutUs" class="nav-link">About Thrive<span class="sr-only">(current)</span></a>
                    </li>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
</head>
<body class="fade-in">
    <div class="text-center">
        <h4 class="text-center" style="margin-top: 15px;">Filter Users</h4>
        <div>
            <button id="teachersButton" style="" type="button" class="btn btn-outline-primary" onclick="fillTeachers()">Teachers</button>
            <button id="studentsButton" style="" type="button" class="btn btn-outline-primary" onclick="fillStudents()">Students</button>
        </div>
    </div>
    <div style="" id="imageContainer" class="imageContainer">
    </div>
    <div id="componentButtons" style="margin-top: 25px;">
        <h4 style="">Select a user to get started!</h4>
    </div>
    <div class="row" style="height:500px; margin-left:0px; margin-right:0px;">
        <div class="col-sm-6">
            <div id="messageBox" style="margin-left:auto; margin-right:auto; border-radius:10px; width:90%; height:100%; border:1px solid #000;">
                <div id="messageContainer" style="overflow:auto; height:85%; margin:1%; font-size: 18px;"></div>
                <div id="lowerInput" class="text-center">
                    <input style="margin-left:1%; border-radius: 15px; font-size: 18px; text-decoration-color: #000000; border: 1px solid #000; height: 50px; width: 375px;" type="text" id="messageInputBox" name="messageInputBox" placeholder="Type your message..">
                    <button id="send" style="border-radius: 15px;" class="btn btn-outline-primary">SEND</button>
                    <input id="user" style="display:none" value="@Html.ViewContext.HttpContext.User.Identity.Name" />
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div id="gradesContainer" style="margin-left:auto; margin-right:auto; border-radius: 10px;width:90%; height:100%;border:1px solid #000; visibility:hidden;"></div>
        </div>
    </div>

    <div class="modal" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <p>Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <script src="~/js/genericPage.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
</body>

</html>


