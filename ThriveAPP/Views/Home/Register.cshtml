
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<link rel='shortcut icon' href='~/images/favicon.png' />
<title>Thrive - Signup</title>

<meta charset='utf-8'>
<link href="~/css/bootstrap.css" rel="stylesheet" />

<body class='fade-in'>
    <div class="text-center">
        <a href='~/Home/Index'><img src='~/images/thriveLogo250x100.png'></a>
    </div>

    <div>
        <br />
        <br />
    </div>

    <center><img id='welcomeRegistery' style='padding-right: 20px;' src='~/images/registeryWelcoming.png'></center>
    <div class="row animate text-center">
        <div class='col-sm-4'>

            <a asp-route-roleInput="Teacher" asp-area='Identity' asp-page='/Account/Register'><img style='opacity: 1;width:100%' id='registerAsTeacher' src='~/images/newTeacherCircle.png'></a>

        </div>
        <div class='col-sm-4'>

            <a asp-route-roleInput="Parent" asp-area='Identity' asp-page='/Account/Register'><img style='opacity: 1;width:100%' id='registerAsParent' src='~/images/newParentCircle.png'></a>

        </div>
        <div class='col-sm-4'>

            <a asp-route-roleInput="Student" asp-area='Identity' asp-page='/Account/Register'><img style='opacity: 1;width:100%' id='registerAsStudent' src='~/images/newStudentCircle.png'></a>

        </div>
    </div>
    <div class="text-center">

        <img style='height: 15%; width: 15%;' src='~/images/dontRegister.png'>
        <a href='~/Home/Index'><img src='~/images/homeCircle.png'style='height: 15%; width: 11%;'></a>

    </div>
</body>

