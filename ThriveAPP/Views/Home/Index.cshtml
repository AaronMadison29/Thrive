<!DOCTYPE html>
<html lang="en">
<head>
    <title>Thrive</title>
    <meta charset="utf-8">
    <link rel="shortcut icon" href="~/images/favicon.png" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />

</head>
<body class='fade-in'>
    <div class="row" style="height:50vh">
        <div class="col-sm-4">

        </div>
        <div style="padding-top:20vh" class="col-sm-4 text-center">
            <a href='~/Home/Index'><img src='~/images/thriveLogo250x100.png'></a>
        </div>
        <div style="padding-top:30vh; padding-left:10vh" class="col-sm-4">
            <a asp-action="Register"><img id="registerButton" style="visibility: visible;height:15vh;width:15vh" src="~/images/newUserCircle.png"></a>
        </div>
    </div>

    <div class="row animate">
        <div class="col-sm-3">
            <a asp-route-roleInput="Teacher" asp-area="Identity" asp-page="/Account/Login"><img style="opacity: 1; width:100%" src="~/images/teacherCircle.png"></a>
        </div>
        <div class="col-sm-3">
            <a asp-route-roleInput="Parent" asp-area="Identity" asp-page="/Account/Login"><img style="opacity: 1; width:100%;" src="~/images/parentCircle.png"></a>
        </div>
        <div class="col-sm-3">
            <a asp-route-roleInput="Student" asp-area="Identity" asp-page="/Account/Login"><img style="opacity: 1; width:100%;" src="~/images/studentCircle.png"></a>
        </div>
        <!--JAVASCRIPT IMPORTS-->
        <script src="~/js/style.js"></script>
    </div>
</body>
